@using CustomPomodoro.Models;

<section class="my-5">
    <div class="text-start prime-content">
        @{
            if (Header != string.Empty)
            {
                <h5 class="text-start">@Header</h5>
            }
        }

        <div class="d-flex flex-column gap-2 mb-2 flex-wrap flex-lg-nowrap">
            <label>Text brightness <span class="hsl-num-display">@TextColor.Lightness</span></label>
            <input class="hsl-text-input" type="range" @bind:event="oninput" @bind="TextColor.Lightness" />
        </div>
        
        <div class="color-preview" style="background-color:hsl(@BgColor.Hue, @BgColor.Saturation%, @BgColor.Lightness%);">
            <p class="text-color-preview" style="color:hsl(@TextColor.Hue, @TextColor.Saturation%, @TextColor.Lightness%);">Text color</p>
        </div>
        <div class="d-flex flex-column text-start custom-slider mt-1 hsl-bg-input">
            <div class="d-flex flex-column gap-2 flex-wrap flex-lg-nowrap">
                <label>Hue <span class="hsl-num-display">@BgColor.Hue</span></label>
                <input type="range" @bind:event="oninput" @bind="BgColor.Hue" min="0" max="360" />
            </div>

            <div class="d-flex flex-column gap-2 flex-wrap flex-lg-nowrap">
                <label>Saturation <span class="hsl-num-display">@BgColor.Saturation</span></label>
                <input type="range" @bind:event="oninput" @bind="BgColor.Saturation" min="0" max="100" />
            </div>

            <div class="d-flex flex-column gap-2 flex-wrap flex-lg-nowrap">
                <label>Light <span class="hsl-num-display">@BgColor.Lightness</span></label>
                <input type="range" @bind:event="oninput" @bind="BgColor.Lightness" min="0" max="100" />
            </div>
        </div>
    </div>
</section>