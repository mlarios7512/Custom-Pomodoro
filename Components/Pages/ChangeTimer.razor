@page "/ChangeTimer"

<h3 class="mb-5">Change Timer</h3>
<EditForm Model="SetToEdit" OnValidSubmit="@ChangeTimerProps" FormName="UpdateTimerInfo">
    <div class="mb-4 row">
        <label for="worktime-input" class="col-sm-4 col-form-label">Work time</label>
        <div class="col-sm-4">
            <InputText placeholder="0 to 59 min (ex:25:00)" id="worktime-input" @bind-Value="SetToEdit.WorkTime" class="form-control timer-property-input" pattern="^([0-5]?[0-9]|2[0-3]):[0-5][0-9]$" minlength="1" maxlength="5" required></InputText>
        </div>
    </div>

    <div class="mb-4 row">
        <label for="short-break-input" class="col-sm-4 col-form-label">Short break time</label>
        <div class="col-sm-4">
            <InputText placeholder="0 to 59 min (ex:25:00)" id="short-break-input" @bind-Value="SetToEdit.ShortBreak" class="form-control timer-property-input" pattern="^([0-5]?[0-9]|2[0-3]):[0-5][0-9]$" minlength="1" maxlength="5" required></InputText>
        </div>
    </div>

    <div class="mb-4 row">
        <label for="work-reps-input" class="col-sm-4 col-form-label">Work reps (before long break)</label>
        <div class="col-sm-4">
            <InputNumber placeholder="any num 2 to 9" id="work-reps-input" @bind-Value="SetToEdit.RepsBeforeLongBreak" class="form-control timer-property-input" min="2" max="9" pattern="^[2-9]{1}$" required></InputNumber>
        </div>
    </div>

    <div class="mb-4 row">
        <label for="long-break-input" class="col-sm-4 col-form-label">Long break time</label>
        <div class="col-sm-4">
            <InputText placeholder="0 to 59 min (ex:25:00)" id="long-break-input" @bind-Value="SetToEdit.LongBreak" class="form-control timer-property-input" pattern="^([0-5]?[0-9]|2[0-3]):[0-5][0-9]$" minlength="1" maxlength="5" required></InputText>
        </div>
    </div>

    <button class="btn btn-custom-start mt-4" type="submit">Save</button>
</EditForm>