@page "/"

<section>
    <div class="container mb-5">
        <div class="row">
            <div class="col-6">Session @SessionCount of @CurPomodoroSet.RepsBeforeLongBreak</div>
            <div class="col-6">Work time: @CurPomodoroSet.WorkTime</div>
            <div class="col-6">Current session: Work</div>
            <div class="col-6">Break times: @CurPomodoroSet.ShortBreak - @CurPomodoroSet.LongBreak</div>
        </div>
    </div>
</section>

<section class="text-center mb-3">
    <h4>Time left</h4>
    <div class="fs-3">
        @{
            if(CurPomodoroSet.WorkTime != string.Empty)
            {
                if(MainTimerState == TimerMode.NotStarted)
                {
                    <p id="pomodoro-time">@CurPomodoroSet.WorkTime</p>
                }
                else if(VisibleTimerDisplay != null)
                {
                    <p>@VisibleTimerDisplay</p>
                }
                else
                {
                    <p>(Error displaying timer)</p>
                }
            }
            else
            {
                <p>(Error loading timer)</p>
            }
        }
     </div>
</section>

<div class="btn-group gap-5" role="group" aria-label="Basic example">
    @{
        if(MainTimerState == TimerMode.NotStarted)
        {
            <button class="btn btn-custom-start" onclick="@StartTimer">Start</button>
        }
        if(MainTimerState == TimerMode.Paused)
        {
            <button class="btn btn-secondary">Pause</button>
            <button class="btn custom-cancel-btn">Cancel</button>
        }
        if(MainTimerState == TimerMode.Started)
        {
            <button class="btn custom-cancel-btn">Cancel</button>
            <button class="btn btn-custom-stop">End session</button>
        }
    }
</div>

