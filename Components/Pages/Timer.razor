@page "/"

<section>
    <div class="container mb-5">
        <div class="row">
            <div class="col-6">Session @SessionCount of @CurPomodoroSet.RepsBeforeLongBreak</div>
            <div class="col-6">Work time: @CurPomodoroSet.WorkTime</div>
            <div class="col-6">Current session: @PomodoroWorkState</div>
            <div class="col-6">Break times: @CurPomodoroSet.ShortBreak - @CurPomodoroSet.LongBreak</div>
        </div>
    </div>
</section>

<section class="text-center mb-3">
    <h4>Time left</h4>
    <div class="fs-3">
        @{
            <p>@PrintCountdownTimer()</p>
        }
     </div>
</section>

<div class="btn-group gap-5" role="group" aria-label="Basic example">
    @{
        //Timer not started.
        if (ActualCountdownTimer.Enabled == false
                && TimerInSeconds == -1)
        {
            <button class="btn btn-custom-start" @onclick="() => StartTimer(CurPomodoroSet)">Start</button>
        }
        // //Paused timer, but already started.
        if(ActualCountdownTimer.Enabled == false 
            && TimerInSeconds > 0
        && TimerInSeconds != GetEndTimeInSecondsFormat(CurPomodoroSet.WorkTime))
        {
            <button class="btn btn-secondary">Pause</button>
            <button class="btn custom-cancel-btn">Cancel</button>
        }
        // //Timer is currently active.
        if(ActualCountdownTimer.Enabled == true)
        {
            <button class="btn custom-cancel-btn">Cancel</button>
            <button class="btn btn-custom-stop">End session</button>
        }
    }
</div>

