@using CustomPomodoro.Models;

<section class="my-5">
    <div class="text-start prime-content">
        @{
            if (Header != string.Empty)
            {
                <h5 class="text-start">@Header</h5>
            }
        }
    
        <div class="color-preview" style="background-color:hsl(@Color.Hue, @Color.Saturation%, @Color.Lightness%);">
        </div>
        <div class="d-flex flex-column text-start custom-slider mt-1">
            <div class="d-flex flex-column gap-2 flex-wrap flex-lg-nowrap">
                <label>Hue <span class="hue-num-display">@Color.Hue</span></label>
                <input type="range" @bind:event="oninput" @bind="Color.Hue" min="0" max="360" />
            </div>

            <div class="d-flex flex-column gap-2 flex-wrap flex-lg-nowrap">
                <label>Saturation <span class="hue-num-display">@Color.Saturation</span></label>
                <input type="range" @bind:event="oninput" @bind="Color.Saturation" min="0" max="100" />
            </div>

            <div class="d-flex flex-column gap-2 flex-wrap flex-lg-nowrap">
                <label>Light <span class="hue-num-display">@Color.Lightness</span></label>
                <input type="range" @bind:event="oninput" @bind="Color.Lightness" min="0" max="100" />
            </div>
        </div>
    </div>
</section>